<% days = {Mo: 0, Tu: 0, We: 0, Th: 0, Fr: 0, Sa: 0, Su: 0}%>
<% hours = Hash.new(0) %>
<% color_arc = ""%>

<% current_user.prepwork_smokes.each do |smoke| %>
  <% if smoke.created_at.strftime("%A") == "Monday" %>
    <% days[:Mo] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Tuesday" %>
    <% days[:Tu] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Wednesday" %>
    <% days[:We] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Thursday" %>
    <% days[:Th] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Friday" %>
    <% days[:Fr] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Saturday" %>
    <% days[:Sa] += 1 %>
  <% elsif smoke.created_at.strftime("%A") == "Sunday" %>
    <% days[:Su] += 1 %>
  <% end %>
<% end %>

<% current_user.prepwork_smokes.each do |smoke| %>
  <% 23.times do |i| %>
    <% if smoke.created_at.hour == i %>
      <% hours[i] += 1 %>
    <% end %>
  <% end %>
<% end %>


<div class="flex flex-col items-center">

  <div class="flex flex-col items-center p-4">
    <h1 class="text-gray-800 font-semibold text-3xl mb-12">Your last week</h1>
    <h2 class="text-gray-800 font-semibold text-xl">You smoked <span class="text-red-500"><%= Smoke.where(user_id: current_user.id).count %></span> cigarettes this week</h2>
    <h2 class="text-gray-800 font-semibold text-xl"><span class="text-red-500"><%= Smoke.where(user_id: current_user.id).count * 0.5%>â‚¬</span> gone in smoke</h2>
  </div>

  <div class="flex h-48 justify-center items-end p-4">
    <% days.each do |day, value| %>
      <div class="w-10 mx-1 bg-indigo-<%=(value/10.0).ceil * 100 + 300%> text-white font-bold text-sm flex justify-center items-end pb-1 rounded" style="height: calc(<%= value %>% * 3)"><%= day %></div>
    <% end %>
  </div>

  <h2 class="text-gray-800 font-semibold text-xl">Weekly consumption</h2>

  <div class="flex h-48 justify-center items-end p-4">
    <% hours.first(14).each do |hour, value| %>
      <div class="w-6 bg-indigo-<%=(value/10.0).ceil * 100 + 300%> text-white font-bold text-sm flex justify-center items-end pb-1 rounded" style="height: calc((<%= value %>% * 3 + 25px))"><%= hour %></div>
    <% end %>
  </div>

  <h2 class="text-gray-800 font-semibold text-xl mb-12">Daily consumption</h2>

  <%= link_to "START", programs_path, method: :post, class:"w-8/12 h-16 flex justify-center items-center shadow-md bg-blue-800 uppercase text-white focus:bg-blue-900 font-bold mb-10 px-20 rounded-md" %>
  <div class="w-24 flex justify-between pt-1 pb-3">
    <i class="far fa-circle"></i>
    <i class="fas fa-circle"></i>
    <i class="far fa-circle"></i>
  </div>
</div>
