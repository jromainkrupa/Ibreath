<div class="container flex flex-col h-screen overflow-auto">
  <div class="flex flex-col items-center flex-grow">
    <h2 class="text-green-400 text-2xl py-24">Create account</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs w-screen">
        <div class="bg-gray-200 py-3 px-6 mb-3 mx-6 rounded flex items-center">
          <i class="far fa-user text-gray-400"></i>
          <%= f.input :first_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "first-name", class: "ml-6 bg-gray-200 w-56"},
                label: false,
                placeholder: "First Name" %>
        </div>
        <div class="bg-gray-200 py-3 px-6 mb-3 mx-6 rounded flex items-center">
          <i class="far fa-user text-gray-400"></i>
          <%= f.input :last_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "last-name", class: "ml-6 bg-gray-200 w-56"},
                label: false,
                placeholder: "Last Name" %>
        </div>
        <div class="bg-gray-200 py-3 px-6 mb-3 mx-6 rounded flex items-center">
          <i class="far fa-envelope text-gray-400"></i>
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "ml-6 bg-gray-200 w-56"},
                label: false,
                placeholder: "Email" %>
        </div>
        <div class="bg-gray-200 py-3 px-6 mb-3 mx-6 rounded flex items-center">
          <i class="fas fa-unlock text-gray-400"></i>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "ml-6 bg-gray-200 w-56"},
                      label: false,
                      placeholder: "Password" %>
        </div>
        <div class="bg-gray-200 py-3 px-6 mb-3 mx-6 rounded flex items-center">
          <%= f.input :birth_date,
              required: true,
              input_html: { autocomplete: "birth-date", class: "bg-gray-200" },
              placeholder: "Birth Date",
              label: false %>
        </div>
      </div>
      <div class="form-actions text-center">
        <%= f.button :submit, "SIGN UP", class: "shadow-md mt-12 py-3 px-16 bg-green-400 rounded-full text-white text-xs font-semibold" %>
      </div>
    <% end %>
  </div>
  <div class="flex flex-col items-center mb-4">
    <%= link_to "SIGN IN", new_user_session_path, class: "text-gray-400 text-base font-semibold" %>
  </div>
</div>
